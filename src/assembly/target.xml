<?xml version="1.0" encoding="US-ASCII"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                              http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <outputDirectory/>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
            </includes>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>*.jar</include>
                <include>*.xml</include>
                <include>*.html</include>
                <include>*.xsl</include>
                <include>*.xsd</include>
                <include>*.bat</include>
            </includes>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/generated-documents</directory>
            <outputDirectory/>
            <includes>
                <include>${project.name}.html</include>
            </includes>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>*.sh</include>
            </includes>
            <lineEnding>keep</lineEnding>
            <fileMode>555</fileMode>
        </fileSet>

        <!--fileSet>
            <directory>target/st</directory>
            <outputDirectory>st</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/xslt</directory>
            <outputDirectory>xslt</outputDirectory>
        </fileSet-->
    </fileSets>
</assembly>
