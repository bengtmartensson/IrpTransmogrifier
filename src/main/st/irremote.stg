DeclareDurationCounter() ::= <<
static <ImplementationType("longType")> <DurationCounterName()> = 0<ImplementationType("longTypeSuffix")>;
>>

BitCount(e)           ::= <<
bitCount(<(e.arg.kind)(e.arg)>)
>>

